{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["regexManagers:dockerfileVersions"],
    "timezone": "Europe/Amsterdam",
    "schedule": ["every weekday"],
    "baseBranches": ["main"],
    "gitAuthor": "RenovateBot <bot@me.com>",
    "reviewers": [
      "jp.schoombee@gmail.com"
    ],
    "regexManagers": [

      {
        "fileMatch": ["release\\.version$"],
        "matchStrings": [
          "^(?<currentValue>.+) # renovate: Environment=(?<depName>.*)\r"
        ],
        "datasourceTemplate": "git-tags",
        "versioningTemplate": "semver",
        "lookupNameTemplate": "https://jschoombee@github.com/jschoombee/renovate.git"
      },
      {
        "fileMatch": ["release\\.version$"],  
        "matchStrings": [
          "^client: (?<currentDigest>.+) # renovate: Environment=(?<depName>.*)\r"
        ],
        "datasourceTemplate": "git-refs",
        "lookupNameTemplate": "https://leanpos@dev.azure.com/leanpos/LeanPos/_git/leanpos-release",
        "currentValueTemplate": "main"
      }
    
    ],
    "packageRules": [
        {
            "datasources": ["github-releases"],
            "managers": ["regex"],
            "extractVersion": "^v(?<version>.*)$"
        }
    ]
  }
  