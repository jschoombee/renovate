{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["regexManagers:dockerfileVersions"],
    "timezone": "Europe/Amsterdam",
    "schedule": ["every weekday"],
    "baseBranches": ["main"],
    "gitAuthor": "RenovateBot <bot@me.com>",
    "reviewers": [
      "jp.schoombee@gmail.com"
    ],
    "regexManagers": [

      {
        "fileMatch": ["release\\.version$"],  
        "matchStrings": [
          "^client: (?<currentDigest>.+) # renovate: Environment=(?<depName>.*)\n"
        ],
        "datasourceTemplate": "git-refs",
        "lookupNameTemplate": "https://jschoombee@github.com/jschoombee/renovate.git",
        "currentValueTemplate": "main",
        "versioningTemplate": "git",
        "depNameTemplate": "declarethumbwar"
      },

      {
        "fileMatch": ["release\\.version$"],  
        "matchStrings": [
          "^services: (?<currentDigest>.+) # renovate: Environment=(?<depName>.*)\n"
        ],
        "datasourceTemplate": "git-refs",
        "lookupNameTemplate": "https://jschoombee@github.com/jschoombee/renovate.git",
        "currentValueTemplate": "main",
        "versioningTemplate": "git",
        "depNameTemplate": "declarethumbwar"
      }
   
    ],
    "packageRules": [
        
      ]
  }
  
