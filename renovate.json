{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["regexManagers:dockerfileVersions"],
    "timezone": "Europe/Amsterdam",
    "schedule": ["every weekday"],
    "baseBranches": ["main"],
    "gitAuthor": "RenovateBot <bot@me.com>",
    "reviewers": [
      "jp.schoombee@gmail.com"
    ],
    "regexManagers": [   
      {
        "fileMatch": ["alpha\\.release\\.version$"],
        "matchStrings": [
          "services: (?<currentValue>.+) # renovate: Target=(?<depName>.*)\n"
        ],
        "datasourceTemplate": "git-tags",
       
        "lookupNameTemplate": "https://jschoombee@github.com/jschoombee/renovate.git"
      },
      {
        "fileMatch": ["alpha\\.release\\.version$"],
        "matchStrings": [
          "client: (?<currentValue>.+) # renovate: Target=(?<depName>.*)\n"
        ],
        "datasourceTemplate": "git-tags",
      
        "lookupNameTemplate": "https://jschoombee@github.com/jschoombee/renovate.git"
      }
   
    ],
    "packageRules": [
      {
        "datasources": ["github-releases"],
        "managers": ["regex"],
        "extractVersion": "^(?<version>.*)$"
      },
        {
          "matchDatasources": ["git-tags"],
          "addLabels": ["latest-unstable"],
          "extractVersion": "^(services|client)-(?<version>.*)$"
        }
      ]
  }
  
